{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DbConnection": "Server=localhost\\SQLEXPRESS;Database=uni_documents_db;Trusted_Connection=True;Encrypt=False;"
  },
  "AllowedHosts": "*",
  
  "ApplicationConfiguration": {
    "UseAuthentication": false,
    "UseRealDatabase": false,
    "JwtSecrets": {
      "Issuer": "https://localhost",
      "Audience": "https://localhost",
      "ExpirationDurationInMinutes": 60,
      "SecretKey": "This is my supper secret key for jwt"
    },
    "CurrentKerasOptions": "KerasOptionsDoc2Vec"
  },
  
  "TextProcessOptions": {
    "MinWordsCount": 10,
    "TokenizeRegex": "[0-9!#$%&'()*+,./:;<=>?@[\\]^__`{|}~\"\\-−]+",
    "BreakTexts": [
      "список использованных источников"
    ]
  },
  
  "MatchingOptions": {
    "NGram": 3,
    "Threshold": 8,
    "MinDistance": 8
  },
  
  "FingerprintOptions": {
    "SentenceLevel": {
      "WordsCount": [10, 50],
      "WindowSize": 5,
      "GramSize": 10
    },
    "ParagraphLevel": {
      "WordsCount": [50, 200],
      "WindowSize": 20,
      "GramSize": 20
    },
    "DocumentLevel": {
      "WordsCount": [200, -1],
      "WindowSize": 64,
      "GramSize": 30
    }
  },
  
  "Doc2VecOptions": {
    "Name": "doc2vec",
    "EmbeddingSize": 40,
    "WindowSize": 5,
    "Epochs": 50,
    "InferEpochs": 20,
    "Alpha": 0.25,
    "MinAlpha": 0.00025,
    "Dm": 1,
    "WorkersCount": 4,
    "MinWordsCount": 2
  },


  "KerasOptionsDoc2Vec": {
    "Name": "keras2vec",
    "EmbeddingSize": 100,
    "WindowSize": 7,
    "BatchSize": 7,
    "Epochs": 100,
    "InferEpochs": 20,
    "LearningRate": 0.1,
    "IsPlotResults": false,
    "Verbose": 1,
    "Loss": "categorical_crossentropy",
    "Metrics": [
      "categorical_crossentropy",
      "cosine_proximity"
    ],
    "Layers": [
      {
        "Type": "Lambda",
        "Name": "split",
        "Parameters": {
          "LambdaName": "split"
        }
      },
      {
        "Type": "Average",
        "Name": "average"
      },
      {
        "Type": "Lambda",
        "Name": "squeeze",
        "Parameters": {
          "LambdaName": "squeeze"
        }
      }
    ]
  },
  
  "KerasOptionsLstm": {
    "Name": "lstm2vec",
    "EmbeddingSize": 150,
    "WindowSize": 7,
    "BatchSize": 5,
    "Epochs": 100,
    "InferEpochs": 5,
    "LearningRate": 0.1,
    "IsPlotResults": true,
    "Verbose": 1,
    "Loss": "categorical_crossentropy",
    "Metrics": [
      "categorical_crossentropy",
      "cosine_proximity"
    ],
    "Layers": [
      {
        "Type": "Lambda",
        "Name": "split",
        "Parameters": {
          "LambdaName": "split"
        }
      },
      {
        "Type": "Average",
        "Name": "average"
      },
      {
        "Type": "LSTM",
        "Name": "lstm1",
        "Parameters": {
          "UnitsCount": 300,
          "ReturnSequences": false
        }
      }
    ]
  }
}